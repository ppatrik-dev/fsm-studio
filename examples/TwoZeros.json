{
    "automate_comment": "Prepne výstup na 1 po každej dvojici '00'",
    "automate_name": "TwoZeros",
    "inputs": [
        "var input = '00100100';"
    ],
    "outputs": [
        "var output = '';"
    ],
    "start_state": "Init",
    "states": {
        "Fire": {
            "action": "output += '1';",
            "transitions": [
                {
                    "condition": "true;",
                    "to": "Init"
                }
            ]
        },
        "Init": {
            "action": "",
            "transitions": [
                {
                    "condition": "input == '0';",
                    "to": "OneZero"
                }
            ]
        },
        "OneZero": {
            "action": "",
            "transitions": [
                {
                    "condition": "input == '0';",
                    "to": "Fire"
                },
                {
                    "condition": "input == '1';",
                    "to": "Init"
                }
            ]
        }
    },
    "variables": [
    ]
}
