{
    "automate_comment": "The automaton outputs 1 if the number of zeros is even.",
    "automate_name": "EvenZero",
    "inputs": [
        "var input;"
    ],
    "outputs": [
        "var output;"
    ],
    "start_state": "EVEN",
    "states": {
        "EVEN": {
            "action": "output = '1';",
            "transitions": [
                {
                    "condition": "input == '0';",
                    "to": "ODD"
                },
                {
                    "condition": "input == '1';",
                    "to": "EVEN"
                }
            ]
        },
        "ODD": {
            "action": "output = '0';",
            "transitions": [
                {
                    "condition": "input == '0';",
                    "to": "EVEN"
                },
                {
                    "condition": "input == '1';",
                    "to": "ODD"
                }
            ]
        }
    },
    "variables": [
    ]
}
