{
    "automate_comment": "It detects the alternation of 0 and 1.",
    "automate_name": "AlternatingBits",
    "inputs": [
        "var input = '010101001101';"
    ],
    "outputs": [
        "var output = '';"
    ],
    "start_state": "Start",
    "states": {
        "Invalid": {
            "action": "output += 'X';",
            "transitions": [
                {
                    "condition": "true",
                    "to": "Invalid"
                }
            ]
        },
        "Seen0": {
            "action": "output += '0';",
            "transitions": [
                {
                    "condition": "input == '1';",
                    "to": "Seen1"
                },
                {
                    "condition": "input == '0';",
                    "to": "Invalid"
                }
            ]
        },
        "Seen1": {
            "action": "output += '1';",
            "transitions": [
                {
                    "condition": "input == '0';",
                    "to": "Seen0"
                },
                {
                    "condition": "input == '1';",
                    "to": "Invalid"
                }
            ]
        },
        "Start": {
            "action": "output += '-';",
            "transitions": [
                {
                    "condition": "char === '0';",
                    "to": "Seen0"
                },
                {
                    "condition": "char === '1';",
                    "to": "Seen1"
                }
            ]
        }
    },
    "variables": [
    ]
}
