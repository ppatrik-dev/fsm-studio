{
    "automate_comment": "Cyclic Moore machine: RED → GREEN → BLUE → RED",
    "automate_name": "Semaphore",
    "inputs": [
        "var input;"
    ],
    "outputs": [
        "var output;"
    ],
    "start_state": "RED",
    "states": {
        "RED": {
            "action": "output = 'red';",
            "transitions": [
                {
                    "condition": "input == '1';",
                    "to": "GREEN"
                }
            ]
        },
        "GREEN": {
            "action": "output = 'green';",
            "transitions": [
                {
                    "condition": "input == '1';",
                    "to": "BLUE"
                }
            ]
        },
        "BLUE": {
            "action": "output = 'blue';",
            "transitions": [
                {
                    "condition": "input == '1';",
                    "to": "RED"
                }
            ]
        }
    },
    "variables": []
}