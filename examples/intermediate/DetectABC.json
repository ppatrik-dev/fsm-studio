{
    "automate_comment": "It detects the occurrence of the substring 'abc' and outputs the number of occurrences.",
    "automate_name": "DetectABC",
    "inputs": [
        "var input = 'abchshsabcghrshabc';"
    ],
    "outputs": [
        "var output = '';"
    ],
    "start_state": "START",
    "states": {
        "MATCH": {
            "action": "count += 1; output = count;",
            "transitions": [
                {
                    "condition": "input == 'a';",
                    "to": "S1"
                },
                {
                    "condition": "true;",
                    "to": "START"
                }
            ]
        },
        "S1": {
            "action": "output = count;",
            "transitions": [
                {
                    "condition": "input == 'b';",
                    "to": "S2"
                },
                {
                    "condition": "input == 'a';",
                    "to": "S1"
                },
                {
                    "condition": "true;",
                    "to": "START"
                }
            ]
        },
        "S2": {
            "action": "output = count;",
            "transitions": [
                {
                    "condition": "input == 'c';",
                    "to": "MATCH"
                },
                {
                    "condition": "input == 'a';",
                    "to": "S1"
                },
                {
                    "condition": "true;",
                    "to": "START"
                }
            ]
        },
        "START": {
            "action": "output = count;",
            "transitions": [
                {
                    "condition": "input == 'a';",
                    "to": "S1"
                },
                {
                    "condition": "true;",
                    "to": "START"
                }
            ]
        }
    },
    "variables": [
        "var count = 0;"
    ]
}
