{
    "automate_comment": "It detects palindromes of length 3 (e.g., 'aba', '101') and records 1 when found, otherwise 0.",
    "automate_name": "PalindromLength3",
    "inputs": [
        "var input = 'aba';"
    ],
    "outputs": [
        "var output = '';",
        "var prev1 = '';",
        "var prev2 = '';"
    ],
    "start_state": "INIT",
    "states": {
        "CHECK": {
            "action": "prev2 = input; if (prev2 == prev1) { output = 'TRUE'; }; ",
            "transitions": [
                {
                    "condition": "true;",
                    "to": "CHECK"
                }
            ]
        },
        "INIT": {
            "action": "prev2 = ''; prev1 = input; output = 'false';",
            "transitions": [
                {
                    "condition": "true;",
                    "to": "WAIT1"
                }
            ]
        },
        "WAIT1": {
            "action": "prev2 = input;",
            "transitions": [
                {
                    "condition": "true;",
                    "to": "WAIT2"
                }
            ]
        },
        "WAIT2": {
            "action": "",
            "transitions": [
                {
                    "condition": "true;",
                    "to": "CHECK"
                }
            ]
        }
    },
    "variables": [
    ]
}
