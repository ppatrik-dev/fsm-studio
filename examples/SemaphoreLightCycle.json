{
    "automate_comment": "Cyklický Mooreov automat: RED → GREEN → YELLOW → RED pomocou moore.timer(timeout)",
    "automate_name": "SemaphoreLightCycle",
    "inputs": [],
    "outputs": [
        "var output;"
    ],
    "start_state": "RED",
    "states": {
        "RED": {
            "action": "output = 'red'; moore.timer(5000);",
            "transitions": [
                {
                    "condition": "true;",
                    "to": "GREEN"
                }
            ]
        },
        "GREEN": {
            "action": "output = 'green'; moore.timer(4000);",
            "transitions": [
                {
                    "condition": "true;",
                    "to": "YELLOW"
                }
            ]
        },
        "YELLOW": {
            "action": "output = 'yellow'; moore.timer(2000);",
            "transitions": [
                {
                    "condition": "true;",
                    "to": "RED"
                }
            ]
        }
    },
    "variables": []
}