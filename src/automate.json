{
    "automate_name": "TOF5s",
    "automate_comment": "Timer to off, rozšířená verze na testovanie",
    "inputs": [
        "var input = '1101001';"
    ],
    "outputs": [
        "var output;"
    ],
    "variables": [
        "var x = 10;"
    ],
    "start_state": "A",
    "states": {
        "A": {
            "action": "out = '0';",
            "transitions": [
                {
                    "to": "A",
                    "condition": "input[index] == '1'"
                },
                {
                    "to": "D",
                    "condition": "input[index] == '0'"
                }
            ]
        },
        "B": {
            "action": "out = '1';",
            "transitions": [
                {
                    "to": "C",
                    "condition": "input[index] == '1'"
                }
            ]
        },
        "C": {
            "action": "",
            "transitions": [
                {
                    "to": "A",
                    "condition": "input[index] == '0'"
                },
                {
                    "to": "B",
                    "condition": "@timeout"
                }
            ]
        },
        "D": {
            "action": "x = x - 1;",
            "transitions": [
                {
                    "to": "E",
                    "condition": "x <= 5"
                },
                {
                    "to": "A",
                    "condition": "input[index] == '1'"
                }
            ]
        },
        "E": {
            "action": "out = '1';",
            "transitions": [
                {
                    "to": "F",
                    "condition": "@timeout"
                }
            ]
        },
        "F": {
            "action": "out = '0';",
            "transitions": [
                {
                    "to": "A",
                    "condition": "true"
                }
            ]
        }
    }
}